        <StackPanel 
            Margin="0, 50, 0, 0">
            
            <TextBlock
                x:Name="LabNumber"
                Text="LAB #: H190913-2303-1"
                FontFamily="./Fonts/#Open Sans Condensed Light"  />

            <TextBlock
                x:Name="SampleID"
                Text="Sample ID: BOOMER-00013"
